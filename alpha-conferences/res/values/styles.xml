<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="ListItem">
        <item name="android:padding">10dp</item>
    </style>
    <style name="ListItemTitle" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ListItemSubTitle" parent="android:Widget.TextView">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ListItemSpeaker" parent="android:Widget.TextView">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ListItemTime" parent="android:Widget.TextView">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="ListItemImage">
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="NoListData" parent="android:Widget.TextView">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ListItemMoreTitle" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="sectionHeader" parent="android:Widget.TextView">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:textSize">14sp</item>
    </style>        
    <style name="PagerText" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>        
    </style>
    <style name="HTMLListItemText" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="share_button" parent="android:Widget.Holo.Light.Button">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
