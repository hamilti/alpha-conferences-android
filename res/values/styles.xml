<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="ListItem">
        <item name="android:padding">10dp</item>
    </style>
    <style name="ListItem.ListItemNoLeftPadding">
        <item name="android:padding">0dp</item>
    </style>
    <style name="ListItemTitle" parent="android:Widget.TextView">
        <item name="android:textColor">#ff0000</item>
        <item name="android:textColorHighlight">#00ff00</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ListItemSubTitle" parent="android:Widget.TextView">
        <item name="android:textColor">#00ff00</item>
        <item name="android:textColorHighlight">#ff0000</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ListItemImage">
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="NoListData" parent="android:Widget.TextView">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
